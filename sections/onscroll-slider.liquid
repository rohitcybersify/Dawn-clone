<script>
  // Slick Slider
jQuery(".slick-slider").slick({
  slidesToShow: 2,
  slidesToScroll: 1,
  arrows : false
});

// Slick Scroll
jQuery(function () {
  const slider = jQuery(".slick-slider");
  slider;

  slider.on("wheel", function (e) {
    e.preventDefault();

    if (e.originalEvent.deltaY < 0) {
      jQuery(this).slick("slickNext");
    } else {
      jQuery(this).slick("slickPrev");
    }
  });
});

</script>
