     <div class="custom-image" {% if section.settings.position-relative %} style="position:relative;" {% endif %} > 
         <img {% if section.settings.position-absolute %} style="position:absolute; left:{{ section.settings.left-image-position }}; right:{{ section.settings.right-image-position }}; top:{{ section.settings.top-image-position }}; bottom:{{ section.settings.bottom-image-position }};" {% endif %} src="{{ section.settings.image | image_url  }}" height="{{ section.settings.image-height }}" width="{{ section.settings.image-width }}">        
     </div>

{% schema %}
  {
    "name": "Custom Image",
    "settings": [
      {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image"
    },
      {
  "type": "range",
  "id": "image-width",
  "min": 50,
  "max": 1000,
  "step": 10,
  "unit": "px",
  "label": "Image Width",
  "default": 500
},
      {
  "type": "range",
  "id": "image-height",
  "min": 50,
  "max": 1000,
  "step": 10,
  "unit": "px",
  "label": "Image Height",
  "default": 700
},
       {
  "type": "checkbox",
  "id": "position-relative",
  "label": "Main Position Relative",
  "default": false
},
      {
  "type": "checkbox",
  "id": "position-absolute",
  "label": "Image Position Absoute",
  "default": true
},
      {
  "type": "range",
  "id": "left-image-position",
  "min": 0,
  "max": 500,
  "step": 5,
  "unit": "px",
  "label": "Left-position",
  "default": 0
},
      {
  "type": "range",
  "id": "right-image-position",
  "min": 0,
  "max": 500,
  "step": 5,
  "unit": "px",
  "label": "Right-position",
  "default": 0
},
      {
  "type": "range",
  "id": "top-image-position",
  "min":0,
  "max": 500,
  "step": 5,
  "unit": "px",
  "label": "Top-position",
  "default": 0
},
      {
  "type": "range",
  "id": "bottom-image-position",
  "min": 0,
  "max": 500,
  "step": 5,
  "unit": "px",
  "label": "bottom-position",
  "default": 0
}
    ],
     "presets": [
     {"name": "Custom Image"}
    ]
  }
{% endschema %}