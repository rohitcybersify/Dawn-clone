<section class="text-columns {% if section.settings.show_container %} page-width {% endif %}">

  <div class="left-column">
   {% for block in section.blocks %}
    {% case block.type %}      
     {%- when 'text' -%}      
      <div> {{ block.section.text-label }} </div>
         {%- when 'button' -%}      
      <a class="button" href="{{ block.section.btn-label-url }}"> {{ block.section.btn-label }} </a>     
     {% endcase %}
    {% endfor %}
  </div>
  <div class="right-column">
   {% for block in section.blocks %}
    {% case block.type %}  
      
     {%- when 'icon' -%}      
      <div> <span>{{ block.section.icon }}</span>
        <span>{{ block.section.icon-label }}</span>
      </div>     
     {% endcase %}
    {% endfor %}
  </div>
</section>


{% schema %}
  {
    "name": "Text Columns",
    "settings": [ 
      {
  "type": "checkbox",
  "id": "show_container",
  "label": "Enable Container",
  "default": false
}  
    ],
    "blocks":[
      
  {
    "name": "text",
    "type": "text",
     "limit": 10,
      "settings": [        
  {
  "type": "richtext",
  "id": "text-label",
  "label": "Text"
}
    ]
  }
      
    ],
    "presets": [
     {"name": "Text Columns"}
    ]
  }
{% endschema %}